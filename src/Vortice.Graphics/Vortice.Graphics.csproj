<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;net6.0</TargetFrameworks>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!--<TreatWarningsAsErrors>true</TreatWarningsAsErrors>-->
    <ExcludeVulkan>true</ExcludeVulkan>
    <DefineConstants Condition="'$(ExcludeD3D12)' == 'true'">$(DefineConstants);EXCLUDE_D3D12_BACKEND</DefineConstants>
    <DefineConstants Condition="'$(ExcludeVulkan)' == 'true'">$(DefineConstants);EXCLUDE_VULKAN_BACKEND</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="D3D12/**/*" Condition="'$(ExcludeD3D12)' == 'true'" />
    <Compile Remove="Vulkan/**/*" Condition="'$(ExcludeVulkan)' == 'true'" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Toolkit.Diagnostics" Version="7.1.0" />
    <PackageReference Include="Vortice.Vulkan" Version="1.4.2" Condition="'$(ExcludeVulkan)' != 'true'" />
    <PackageReference Include="TerraFX.Interop.Windows" Version="10.0.20348-rc1" Condition="'$(ExcludeD3D12)' != 'true'" />
    <PackageReference Include="TerraFX.Interop.D3D12MemoryAllocator" Version="2.0.0-beta2-1020447976" Condition="'$(ExcludeD3D12)' != 'true'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Vortice\Vortice.csproj" />
  </ItemGroup>

</Project>
